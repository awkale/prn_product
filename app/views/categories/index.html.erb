<div class="row categories index">
  <div class="col-sm-8">
    <h2 class="section-header">Categories <% if current_user.admin %><%= link_to 'New Category', new_category_path, { :class => "btn btn-sm btn-link pull-right" } %><% end %></h2>
    <ol>
      <% @categories.each do |cat| %>
      <li><%= cat.name %>
        <% if current_user.admin %>
        / <%= link_to 'Edit', edit_category_path(cat) %>
        / <%= link_to 'Delete', category_path(cat), method: :delete, data: { confirm: "Are you sure? This con not be undone."} %>
        <% end %>

        </li>
      <% end %>
    </ol>
  </div>
</div>