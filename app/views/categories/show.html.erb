<% title @category.name %>
<h1><%= @category.name %></h1>
<div class="row">
  <div class="col-sm-8">
    <h2 class="section-header h4">Related recipients <% if current_user.admin %><%= link_to 'Edit Category', edit_category_path, {:class => "btn btn-sm btn-link pull-right"} %><% end %></h2>
    <ol>
    <% @category.recipients.each do |c_r| %>
      <li><%= link_to c_r.recipient_name, recipient_path(c_r) %></li>
    <% end %>
    </ol>
  </div>
</div>