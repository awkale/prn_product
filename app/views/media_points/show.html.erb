<div class="row">
  <div class="col-sm-6">
  <h2><%= @media_point.name %> <%= link_to 'Edit Media Point', edit_media_point_path, { :class=>"btn btn-default btn-sm btn-link" } %>
    </h2>

  <dl class="">
    <dt>Category:</dt>
    <dd><%= @media_point.category %></dd>
    <dt>Sub category:</dt>
    <dd><%= @media_point.sub_category %></dd>
    <dt>City:</dt>
    <dd><%= @media_point.city %></dd>
  </dl>
  </div>
  <div class="col-sm-6">
    <h2>Related Products </h2>
    <ol>
      <% @media_point.products.each do |mp_p|%>
      <li>
        <%= link_to mp_p.name, edit_media_point_product_path %>
      </li>
      <% end %>
    </ol>
  </div>
</div>
<hr>
<div class="row">
   <div class="col-sm-6">
    <%= link_to 'View All Media Points', media_points_path, { :class=>"btn btn-default" } %>
   </div>
 </div>
