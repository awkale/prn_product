<div class="row">
  <div class="col-sm-6">
    <h2><%= @media_point.media_point_name %> <% if current_user.admin %><%= link_to 'Edit Recipient', edit_media_point_path, { :class=>"btn btn-sm btn-link" } %><% end %></h2>
    <div class="row">
      <div class="col-sm-6">
        <dl class="dl-horizontal">
          <dt>Category:</dt>
          <dd><%= @media_point.category %></dd>
          <dt>Description:</dt>
          <dd><%= @media_point.description %></dd>
          <dt>Industry/Subject:</dt>
          <dd><%= @media_point.industry  %></dd>
        </dl>
      </div>
      <div class="col-sm-6">
        <dl class="dl-horizontal">
          <dt>City:</dt>
          <dd><%= @media_point.city %></dd>
          <dt>State:</dt>
          <dd><%= @media_point.state %></dd>
          <dt>Country:</dt>
          <dd><%= @media_point.country %></dd>
        </dl>
      </div>
    </div>
    <h3>Channel(s)</h3>
    <ol>
      <% @media_point.channels.each do |c|  %>
      <li><%= link_to c.channel_name, channel_path(c) %></li>
      <% end %>
    </ol>
  </div>
  <div class="col-sm-6">
    <h2>Related Products <% if current_user.admin %><%= link_to 'Add Product', new_media_point_product_path(media_point_id: @media_point.id), { :class=>"btn btn-sm btn-link" } %><% end %></h2>
    <ol>
      <% @media_point.products.each do |mp_p|%>
      <li>
        <%= link_to mp_p.product_name, product_path(mp_p) %> <% if current_user.admin %>/
        <%= link_to 'Edit',  edit_product_path(mp_p) %><% end %>
      </li>
      <% end %>
    </ol>
  </div>
</div>
<hr>
<div class="row">
 <div class="col-sm-2 col-sm-offset-10">
  <% if current_user.admin %><%= link_to 'Delete Recipient', media_point_path, method: :delete, data: { confirm: "Are you sure? This can not be undone." }, :class=>"btn btn-danger btn-sm pull-right" %><% end %>
</div>
</div>
