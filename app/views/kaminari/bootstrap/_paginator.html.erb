<%= paginator.render do -%>
  <ul class="pagination">
    <%= first_page_tag unless current_page.first? %>
    <% each_page do |page| -%>
      <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
        <%= page_tag page %>
      <% end -%>
    <% end -%>
    <%= last_page_tag unless current_page.last? %>
  </ul>
<% end -%>
<% if total_pages > 1 %>
  <div class="per-page pull-right pagination">
    <%= render 'per_page' %>
  </div>
<% end %>