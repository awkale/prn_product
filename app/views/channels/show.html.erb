<% title @channel.channel_name %>
<h1><%= @channel.channel_name %></h1>
<div class="row channel index">
  <div class="col-sm-8">
    <h2 class="section-header h4">Related recipients <% if current_user.admin %><%= link_to 'Edit Channel', edit_channel_path, {:class => "btn btn-sm btn-link pull-right"} %><% end %></h2>
    <ol>
    <% @channel.recipients.sort_by{|t| t.recipient_name.downcase.sub(/^the |a |an /i,"")}.each do |c_p| %>
      <li><%= link_to c_p.recipient_name, recipient_path(c_p) %></li>
    <% end %>
    </ol>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-2 col-sm-offset-10">
    <%= link_to 'Delete Channel', channel_path, method: :delete, data: { confirm: "Are you sure? This can not be undone."}, :class => "btn btn-danger btn-sm pull-right" %>
  </div>
</div>