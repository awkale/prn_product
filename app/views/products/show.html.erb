<div class="row">
  <div class="col-sm-6">
    <h2><%= @product.product_name %> <% if current_user.admin %><%= link_to 'Edit Product', edit_product_path, { :class=>"btn btn-sm btn-link" } %><% end %></h2>
    <dl class="">
      <dt>Description:</dt>
      <dd><%= @product.description %></dd>
      <dt>Code:</dt>
      <dd><%= @product.code %></dd>
      <dt>Base Price:</dt>
      <dd><%= @product.base_price %></dd>
      <dt>Length Price:</dt>
      <dd><%= @product.length_price %></dd>
    </dl>
  </div>
  <div class="col-sm-6">
    <h2>Related Recipients</h2>
    <ol>
      <% @product.media_points.each do |p_mp| %>
      <li>
        <%= link_to p_mp.media_point_name, media_point_path(p_mp) %> <% if current_user.admin %>/
        <%= link_to 'Edit', edit_media_point_path(p_mp) %><% end %>
      </li>
      <% end %>
    </ol>
  </div>
</div>
<hr>
<div class="row">
   <div class="col-sm-2 col-sm-offset-10">
    <%= link_to 'Delete Product', product_path, method: :delete, data: { confirm: "you sure?" }, :class=>"btn btn-danger btn-sm pull-right" %>
   </div>
 </div>
