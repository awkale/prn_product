<div class="row">
  <div class="col-sm-6">
  <h2>Products <%= link_to 'New Product', new_product_path, { :class => "btn btn-default btn-sm btn-link"}  %></h2>
    <ol>
    <% @products.each do |product| %>
      <li><%= link_to product.product_name, product %> <% if current_user.admin %>/ <%= link_to 'edit', edit_product_path(product) %><% end %> </li>
    <% end %>
    </ol>

    <p></p>
  </div>
</div>
