<div class="row products index">
  <div class="col-sm-8">
    <h2 class="section-header"><%= number_with_delimiter(@products.size) + ' of ' + number_with_delimiter(@products.total_count) %> <%= 'Product'.pluralize(@products.count) %>
      <% if current_user.admin %>
          <%= link_to 'New Product',
                      new_product_path,
                      { :class => "btn btn-sm btn-link pull-right"}
          %>
      <% end %>
    </h2>
    <%= paginate @products, :theme => 'bootstrap'%>
     <div class="per-page pull-right pagination">
      <%= render 'per_page' %>
    </div>
    <table class="table table-striped">
      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.product_name,
                    product
              %>
          </td>
          <td><% if current_user.admin %>
            <%= link_to 'edit',
                        edit_product_path(product)
            %>
        <% end %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @products, :theme => 'bootstrap' %>
  </div>
</div>
