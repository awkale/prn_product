
<%= simple_form_for @product do |form| %>
  <%= form.error_notification %>
  <div class="col-sm-6">
  <%= form.input :product_name, placeholder: 'Product' %>
  <%= form.input :description, placeholder: 'Description'%>
  <%= form.input :code, placeholder: 'Code'%>
  </div>
  <div class="col-sm-6">
  <%= form.input :base_price, placeholder: 'Base Price ($)', label: 'Base Price ($)'%>
  <%= form.input :length_price, placeholder: 'Length Price ($)', label: 'Length Price ($)'%>
  </div>
  <div class="col-sm-12">
  <%= form.button :submit, {:class=>"btn btn-primary pull-right"} %>
  <%= link_to "Cancel", :back, {:class=>"btn btn-default pull-right mr-sm"} %>
  </div>
<% end %>