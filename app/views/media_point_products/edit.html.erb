<div class="row">
  <div class="col-sm-6">
    <h1>Edit <%= @media_point_product.media_point_id %></h1>

    <%= simple_form_for @media_point_product do |form| %>
      <%= form.error_notification %>
      <%= form.association :media_point, placeholder: 'Media Point' %>
      <%= form.association :product, placeholder: 'Product' %>
      <%= form.button :submit, {:class=>"btn btn-secondary"} %>
      <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
    <% end %>
  </div>
</div>
