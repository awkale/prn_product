<div class="row">
  <div class="col-sm-8">
    <h2>Add Products to <%= @media_point.media_point_name %></h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-4">
    <%= simple_form_for @media_point_product do |form| %>
      <%= form.error_notification %>
      <%= form.association :media_point, disabled: true, placeholder: 'Recipient', label_method: :media_point_name %>
      <%= form.association :product, placeholder: 'Product', label_method: :product_name %>
      <%= form.hidden_field :media_point_id, value: params[:media_point_id] %>
      <%= form.button :submit, "Add" %>
    <% end %>
  </div>
</div>