<div class="row">
  <div class="col-sm-12">
    <h2 class="section-header"><%= @user.email %> <%= link_to 'Edit', edit_user_path, { :class=>"btn btn-sm btn-link pull-right" } %></h2>
  </div>
  <div class="col-sm-6">
    <dl class="dl-horizontal">
      <dt>First name:</dt>
      <dd><%= @user.first_name %></dd>
      <dt>Last name:</dt>
      <dd><%= @user.last_name %></dd>
      <dt>Admin:</dt>
      <dd><%= @user.admin %></dd>
    </dl>
  </div>
  <div class="col-sm-6">
    <dl>
      <dt>Created:</dt>
      <dd><%= @user.created_at %></dd>
      <dt>Last sign in:</dt>
      <dd><%= @user.last_sign_in_at %></dd>
      <dt>Updated:</dt>
      <dd><%= @user.updated_at %></dd>
    </dl>
  </div>
</div>