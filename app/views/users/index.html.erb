<div class="row users index">
  <div class="col-sm-10">
    <h2 class="section-header"><%= number_with_delimiter(@users.size) + ' of ' + number_with_delimiter(@users.total_count) %> <%= 'User'.pluralize(@users.count) %></h2>
    <%= paginate @users, :theme => 'bootstrap'%>
     <div class="per-page pull-right pagination">
      <%= render 'per_page' %>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>sign_in_count</th>
          <th>confirmed_at</th>
          <th>Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.first_name.present? ? user.first_name : "", user %></td>
          <td><%= link_to user.last_name.present? ? user.last_name : "", user %></td>
          <td><%= link_to user.email, user %></td>
          <td><%= user.sign_in_count %></td>
          <td><%= user.confirmed_at.to_formatted_s(:long) %></td>
          <td><%= user.admin.present? ? user.admin : "" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>