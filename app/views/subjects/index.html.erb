<div class="row subjects index">
  <div class="col-sm-8">
    <h2 class="section-header">Subjects <% if current_user.admin %><%= link_to 'New Subject', new_subject_path, { :class => "btn btn-sm btn-link pull-right" } %><% end %></h2>
    <table class="table table-striped">
      <tbody>
        <% @subjects.each do |sub| %>
        <tr>
          <td><%= link_to(sub.subject_name, sub) %></td>
          <td>
            <% if current_user.admin %>
            <%= link_to 'Edit', edit_subject_path(sub) %>
            <% end %>
          </td>
          <td>
            <% if current_user.admin %>
            <%= link_to 'Delete', subject_path(sub), method: :delete, data: { confirm: "Are you sure? This con not be undone."} %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>