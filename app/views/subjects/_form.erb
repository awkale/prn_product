<%= simple_form_for @subject do |form| %>
  <%= form.error_notification %>
  <%= form.input :subject_name, placeholder: 'subject' %>
  <div class="form-group fr-view">
    <label for="recipient_description">Description</label>
    <%= form.text_area :description,
                   placeholder: 'Description',
                   class: "wysiwyg"
    %>
  </div>
  <%= form.button :submit %>
  <%= link_to "Cancel", :back, { :class => "btn btn-default pull-right mr-sm"} %>
<% end %>