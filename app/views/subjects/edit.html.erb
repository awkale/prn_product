<div class="row subject edit">
  <div class="col-sm-6">
    <h2 class="section-header"><span class="text-muted fw-normal">Edit</span> <%= @subject.subject_name %></h2>

    <%= simple_form_for @subject do |sub| %>
      <%= sub.error_notification %>
      <%= sub.input :subject_name, placeholder: 'subject' %>
      <%= sub.input :description,
                    placeholder: 'Description',
                    input_html: {rows: 5}
       %>
      <%= sub.button :submit %>
      <%= link_to "Cancel", :back, { :class => "btn btn-default pull-right mr-sm"} %>
    <% end %>
  </div>
</div>