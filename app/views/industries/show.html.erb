<% title @industry.industry_name %>
<h1><%= @industry.industry_name %></h1>
<div class="row">
  <div class="col-sm-8">
    <h2 class="section-header h4">
      Related <%= 'Recipient'.pluralize(@related_recipients.count) %> <span class="text-muted small">(<% if current_user.admin %><%= number_with_delimiter(@related_recipients.size) + ' of ' + number_with_delimiter(@related_recipients.total_count) %><% end %>)</span>
        <% if current_user.admin %>
          <%= link_to 'Edit industry',
          edit_industry_path,
          {:class => "btn btn-sm btn-link pull-right"} %>
        <% end %>
    </h2>
    <%= paginate @related_recipients, :theme => 'bootstrap' %>
    <%= render 'related_recip_table' %>
    <%= paginate @related_recipients, :theme => 'bootstrap' %>
  </div>
</div>