<div class="row recipients index">
  <div class="col-sm-12">
    <h2 class="section-header"><%= 'Recipient'.pluralize(@recipients.count) %>
      <% if params[:search].present? %>
      search results
      <% end %>
      <span class="text-muted small">(<%= number_with_delimiter(@recipients.size) + ' of ' + number_with_delimiter(@recipients.total_count) %>)</span>
      <% if current_user.admin %>
      <%= link_to 'New Recipient',
      new_recipient_path,
      { :class => "btn btn-sm btn-link pull-right"} %>
      <% end %>
    </h2>
  </div>
  <div class="col-sm-3">
    <h2 class="">Filters</h2>
    <%= render 'sidebar_filter' %>
  </div>
  <div class="col-sm-9">
    <div class="row">
      <div class="col-sm-12">
        <%= paginate @recipients, :theme => 'bootstrap' %>
      </div>
    </div>
    <div class="row mb-md mt-md">
      <div class="col-sm-12">
        <%= form_tag recipients_path, method: 'get', class: "form-inline search" do  %>
        <div class="form-group">
          <label class="sr-only" for="search">Search recipient name</label>
          <%= text_field_tag :search, params[:search], placeholder: "Search recipient name", class: "form-control" %>
        </div>
        <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        <%= link_to("View all recipients", recipients_path, {class: "btn btn-link"}) %>
        <% end %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Recipient</th>
            <th>Location</th>
            <th>Category</th>
            <th>Multimedia</th>
            <% if current_user.admin %>
            <th>Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @recipients.each do |mp| %>
          <tr>
            <td><% if mp.ap == true %>
              <span class="label label-default"><%= ap_boolean(mp.ap) %></span>
              <% end %> <%= link_to mp.recipient_name, mp %>
            </td>
            <td><%= mp.city.present? ? mp.city + ', ' : "" %><%= mp.state %></td>
            <td><%= mp.category.present? ? mp.category.name : "" %></td>
            <td>
              <% mp.multimedia.each do |multi| %>
              <%= link_to(multi) do%>
              <i class="bts <%= multi.icon %>"></i>
              <% end %>
              <% end %>
            </td>
            <% if current_user.admin %>
            <td>
              <%= link_to 'Edit', edit_recipient_path(mp) %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @recipients, :theme => 'bootstrap' %>
  </div>
</div>

