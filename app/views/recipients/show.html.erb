<% title @recipient.recipient_name %>
<h1>
  <%= @recipient.recipient_name %>
  <% unless @recipient.alternate_name.blank? %><small><em>(<%= @recipient.alternate_name %>)</em></small><% end %>
</h1>
<div class="row recipient show">
  <div class="col-sm-8">
    <h2 class="section-header h4">Recipient details <% if current_user.admin %><%= link_to 'Edit Recipient', edit_recipient_path, { :class=>"btn btn-sm btn-link pull-right" } %><% end %>

    </h2>
    <div class="row">
      <div class="col-sm-6">
        <dl class="">
          <dt>Category:</dt>
          <dd><%= @recipient.category.present? ? link_to(@recipient.category.name, @recipient.category) : "" %></dd>
          <dt>Description:</dt>
          <dd><%= @recipient.description %></dd>
        </dl>
      </div>
      <div class="col-sm-6">
        <dl class="dl-horizontal">
          <dt>City:</dt>
          <dd><%= @recipient.city %></dd>
          <dt>State:</dt>
          <dd><%= @recipient.state %></dd>
          <dt>Country:</dt>
          <dd><%= @recipient.country %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <dl class="">
          <dt>Industry:</dt>
          <% @recipient.industries.each do |ind| %>
          <dd><%= link_to(ind.industry_name, ind) %></dd>
          <% end %>
        </dl>
      </div>
      <div class="col-sm-6">
        <dl class="">
          <dt>Subject:</dt>
          <% @recipient.subjects.each do |sub| %>
          <dd><%= link_to(sub.subject_name, sub) %></dd>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <h2 class="section-header h4"><%= 'Channel'.pluralize(@recipient.channels.count) %></h2>
    <ol>
      <% @recipient.channels.each do |c|  %>
      <li><%= link_to c.channel_name, channel_path(c) %></li>
      <% end %>
    </ol>
    <h2 class="section-header h4">Related <%= 'Product'.pluralize(@recipient.products.count) %></h2>
    <ol>
      <% @recipient.products.each do |mp_p|%>
      <li>
        <%= link_to mp_p.product_name, product_path(mp_p) %> <% if current_user.admin %>/
        <%= link_to 'Edit',  edit_product_path(mp_p) %><% end %>
      </li>
      <% end %>
    </ol>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-2 col-sm-offset-10">
    <% if current_user.admin %><%= link_to 'Delete Recipient', recipient_path, method: :delete, data: { confirm: "Are you sure? This can not be undone." }, :class=>"btn btn-danger btn-sm pull-right" %><% end %>
  </div>
</div>
