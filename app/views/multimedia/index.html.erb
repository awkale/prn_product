<div class="row multimedia index">
  <div class="col-sm-6">
    <h2 class="section-header">Multimedia <%= link_to 'New Multimedium', new_multimedium_path, { :class => "btn btn-sm btn-link pull-right" } if policy(Multimedium).new? %></h2>
    <table class="table table-hover table-condensed">
      <tbody>
        <% @multimedia.each do |multi| %>
        <tr>
          <td><%= link_to multi.media_type, multi%></td>
          <td><%= link_to 'Edit', edit_multimedium_path(multi) if policy(Multimedium).edit? %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
